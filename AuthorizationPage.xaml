<Page x:Class="DemoIlyas.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoIlyas.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Авторизация" HorizontalAlignment="Center" FontSize="40"/>
            <StackPanel>
                <TextBlock Text="Логин" FontSize="20"/>
                <TextBox x:Name="tbLogin" FontSize="20"/>
            </StackPanel>
            <StackPanel Margin="0 10 0 0">
                <TextBlock Text="Пароль" FontSize="20"/>
                <PasswordBox x:Name="pbPassword" FontSize="20"/>
            </StackPanel>
            <Button Content="Войти" FontSize="20" Margin="0 10 0 0" Click="AuthButton_Click"/>
        </StackPanel>   
    </Grid>
</Page>
